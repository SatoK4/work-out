<div class="container">
  <h3 class="font-weight-bold">トレーニング新規投稿</h3>

  <%= render "public/shared/error_messages", resource: @workout %>

  <div class="row">
    <%= form_with model: @workout, url: workouts_path, method: :post do |f| %>
      <table class="table table-sm table-borderless">
        <div class="form-group">
          <tr>
            <td><%= f.label :"イメージ画像" %></td>
            <td><%= f.file_field :images, multiple: true %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td><%= f.label :"トレーニング名" %></td>
            <td><%= f.text_field :name, class: "form-control w-75" %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td><%= f.label :"トレーニング内容" %></td>
            <td><%= f.text_area :introduction, class: "form-control w-75" %></td>
          </tr>
        </div>
      </table>
      <div class="col-12">
        <div class="form-group form-check">
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>