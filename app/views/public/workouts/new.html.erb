<div class="container">
  <%= flash[:alert] %>
  <h3><strong>トレーニング新規投稿</strong></h3>

  <div class="row">
    <table class="table table-sm table-borderless">
      <%= form_with model: @workout do |f| %>
        <div class="form-group">
          <tr>
            <td><%= f.label :"イメージ画像" %></td>
            <td><%= f.file_field :images, multiple: true %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td><%= f.label :"トレーニング名" %></td>
            <td><%= f.text_field :name, class: "form-control w-75" %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td><%= f.label :"トレーニング内容" %></td>
            <td><%= f.text_area :introduction, class: "form-control w-75" %></td>
          </tr>
        </div>
    </table>
      <div class="col-12">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      <% end %>
      </div>
      <div class="form-group">
        <%= f.submit '投稿する', class: "btn btn-primary text-center" %>
      </div>
    <% end %>
  </div>
</div>

<!--画像から内容まではテーブルで囲って見た目を整える-->