<div class="container">
  <%= flash[:alert] %>
  <h3 class="font-weight-bold">何をつぶやきますか？</h3>

  <div class="row">

    <%= form_with model: @whisper, url: whispers_path, method: :post do |f| %>
      <table class="table table-sm table-borderless">
        <div class="form-group">
          <tr><td><%= f.file_field :images, multiple: true %></td></tr>
          <tr><td><%= f.text_area :content, class: "form-control ", placeholder: "内容を入力してください" %></td></tr>
          <tr><td><%= f.submit "つぶやく", class: "btn btn-primary" %></td></tr>
        </div>
      </table>
    <% end %>
  </div>
</div>