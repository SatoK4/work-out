<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="font-weight-bold">編集画面</h3>
    </div>
  </div>
  <%= form_with model: @whisper, url: whisper_path, method: :patch do |f| %>
    <div class="row">
      <div class="col">
         <%= f.text_area :content, class: "form_control w-75", placeholder: "変更後の内容を入力してください" %>
      </div>
    </div>
    <div class="row">
      <div class="col text-right">
        <%= f.submit "変更を保存する", class: "btn btn-sm btn-primary" %>
      </div>
      <div class="col">
        <%= link_to "詳細画面へ戻る", :back, class: "btn btn-sm btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
