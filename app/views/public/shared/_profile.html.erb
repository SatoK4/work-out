<!--アイコンを設定しているか確認-->
<% if customer.image.present? %>
<!--設定している場合、表示する-->
  <%= image_tag customer.image_url(:icon) %>
<% else %>
<!--設定していない場合、デフォルト画像を表示する-->
  <%= image_tag 'no-icon.png', size: "50x50" %>
<% end %>
<%= customer.nickname %>

<!--自己紹介文があれば表示-->
<% if customer.self_introduction.present? %>
    <%= customer.self_introduction %>
<% end %>

<!--自身のユーザーページであれば、プロフィール編集ボタンを表示-->
<% if customer.id == current_customer.id %>
    <%= link_to "編集", edit_customer_path %>
<% end %>

