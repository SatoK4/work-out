<div class="container">
  <% if @customer.is_deleted? %>
    <h4 class="text-center font-weight-bold">このユーザーは退会しました。</h4>
  <% else %>
    <%= render 'public/shared/profile', customer: @customer %>

    <div class="row">
      <h3 class="font-weight-bold"><%= @customer.nickname %>のトレーニング</h3>
    </div>

    <% if @workouts.present? %>
      <table class="table table-borderd">
        <% @workouts.each do |workout| %>
          <tr>
            <td><%= render 'public/shared/workout_post', workout: workout %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @workouts %>
    <% else %>
      <%= @customer.nickname %>さんはまだトレーニングを投稿していません。
    <% end %>
  <% end %>
</div>