<div class="container">
  <%= render 'public/shared/profile', customer: @customer %>

  <div class="row">
    <h3 class="font-weight-bold"><%= @customer.nickname %>のブックマーク一覧</h3>
  </div>

  <div class="row">
    <div class="col-3"><h4>～つぶやき～</h4></div>
    <div class="col-9 d-flex align-items-end justify-content-end">
      <%= link_to "トレーニングのブックマーク一覧へ", workout_bookmarks_customer_path(current_customer.id) %>
    </div>
  </div>

  <% if @whisper_bookmarks.length != 0 %>
    <table class="table table-borderd">
      <% @whisper_bookmarks.each do |whisper| %>
        <tr>
          <td><%= render "public/shared/whisper_post", whisper: whisper %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>ブックマークをしていません。</p>
  <% end %>
</div>