<h3>会員情報編集画面</h3>

<%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
  <%= f.file_field :image %><!--画像のプレビューを-->
  <table>
    <tr>
      <td><%= f.label :ニックネーム%> </td>
      <td><%= f.text_field :nickname %></td>
    </tr>
    <tr>
      <td><%= f.label :自己紹介文 %></td>
      <td><%= f.text_field :self_introduction %></td>
    </tr>
  </table>

  <%= f.submit "変更を保存" %>
  <%= link_to "退会する", unsubscribe_customer_path %>
<% end %>