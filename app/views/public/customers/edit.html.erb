<div class="container">
  <div class="row">
    <h3 class="form-weight-bold">会員情報編集画面</h3>
  </div>

  <%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
    <table class="table table-sm table-borderless">
      <tr>
        <td class="text-center align-middle"><%= f.label :プロフィール画像 %></td>
        <td><%= f.file_field :image %></td>
      </tr>
      <tr>
        <td class="text-center align-middle"><%= f.label :ニックネーム%> </td>
        <td><%= f.text_field :nickname, class: "form-control w-75" %></td>
      </tr>
      <tr>
        <td class="text-center align-middle"><%= f.label :自己紹介文 %></td>
        <td><%= f.text_area :self_introduction, class: "form-control w-75" %></td>
      </tr>
    </table>

    <div class="row">
      <div class="col-6 text-center">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
      <div class="col-6">
        <%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>