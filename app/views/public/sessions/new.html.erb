<div class="container">
  <div class="row">
    <h3 class="font-weight-bold">ログイン</h3>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-sm table-borderless">
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード" %></td>
          <td><%= f.password_field :password, class: "form-control", autocomplete: "current-password" %></td>
        </tr>
      </table>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="row">
    <h3 class="font-weight-bold mt-5">アカウントをお持ちでない方</h3>
  </div>
  <div class="row">
    <%= link_to "こちら", new_customer_registration_path, class: "font-weight-bold" %>から新規登録をしてください。
  </div>
</div>