<div class="container">
  <div class="row">
    <h3 class="font-weight-bold">新規登録</h3>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="table table-sm table-borderless">
        <tr>
          <td><%= f.label :"ニックネーム" %></td>
          <td><%= f.text_field :nickname, class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード(6文字以上)" %></td>
          <td><%= f.password_field :password, class: "form-control", autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード(確認用)" %></td>
          <td><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %></td>
        </tr>
      </table>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h3 class="font-weight-bold mt-5">アカウントをお持ちの方</h3>
  </div>
  <div class="row">
    <%= link_to "こちら", new_customer_session_path, class: "font-weight-bold" %>からログインしてください。
  </div>
</div>