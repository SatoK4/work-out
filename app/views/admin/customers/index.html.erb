<div class="container">
  <div class="row">
    <h3 class="font-weight-bold">登録済みユーザー一覧</h3>
  </div>

  <table class="table table-sm">
    <thead>
      <tr>
        <th colspan="2">ユーザー名</th>
        <th class="text-center">会員ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td></td>
          <td>
            <%= link_to admin_customer_path(customer.id), class: "link" do %>
              <%= render 'admin/shared/small_icon', customer: customer %>
              <%= customer.nickname %>
            <% end %>
          </td>
          <td class="text-center align-middle">
            <% if customer.status == "有効" %>
              <p class="text-success font-weight-bold">有効</p>
            <% else %>
              <p class="text-danger font-weight-bold">無効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>