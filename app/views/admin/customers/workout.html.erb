<h3><%= @customer.nickname %>のトレーニング</h3>
<% if @workouts.present? %>
  <%= @workouts.each do |workout| %>
    <% if workout.images.present? %>
      <% workout.images.each do |image| %>
        <%= image_tag image.to_s %>
      <% end %>
    <% end %>
    <%= link_to admin_workout_path(workout.id) do %>
      <%= workout.name %>
    <% end %>
    <%= workout.introduce %>
    <!--コメントの合計数を表示-->
    <!--公開・非公開ボタンを作成-->
    <!--投稿日時-->
  <% end %>
<% else %>
<p>あなたはまだトレーニングを投稿していません。</p>
<% end %>