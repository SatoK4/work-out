<div class="container pt-3">
  <div class="row">
    <table class="table", style="table-layout:fixed;width:100%">
      <% whisper.whisper_comments.each do |whisper_comment| %>
        <tr>
          <td class="col-3">
            <%= link_to admin_customer_path(whisper_comment.customer_id), class: "link" do %>
              <%= render "admin/shared/small_icon", customer: whisper_comment.customer %>
              <%= whisper_comment.customer.nickname %>
            <% end %>
          </td>
          <td class="col-5 align-middle"><%= simple_format(whisper_comment.comment) %></td>
          <td class="col-2 align-middle"><%= l whisper_comment.created_at, format: :short %></td>
          <td class="col-2 align-middle"><%= link_to "コメントを削除", admin_whisper_whisper_comment_path(whisper_comment.whisper, whisper_comment), class: "btn btn-sm btn-danger", method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>