<% workout.workout_comments.each do |workout_comment| %>
  <%= link_to admin_customer_path(workout_comment.customer_id) do %>
    <%= render "admin/shared/small_icon", customer: workout_comment.customer %>
    <%= workout_comment.customer.nickname %>
  <% end %>
  <%= workout_comment.comment %>
  <%= l workout_comment.created_at, format: :short %>
  <%= link_to "コメントを削除", admin_workout_workout_comment_path(workout_comment.workout, workout_comment), method: :delete %>
<% end %>
