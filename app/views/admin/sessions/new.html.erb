<div class="container">
  <div class="row">
    <h3 class="font-weight-bold">管理者ログイン</h3>
  </div>

  <div class="row">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード" %></td>
          <td><%= f.password_field :password, class: "form-control", autocomplete: "current-password" %></td>
        </tr>
      </table>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>